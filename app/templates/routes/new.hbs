<h2>New route</h2>
<div class="row form-group">
  <div class="col-md-3">
    <label>Date</label>
    {{bs-datetimepicker date=routeDate format='DD.MM.YYYY'}}
  </div>
</div>

<div class="row">
  <div class="col-md-10">
    <table class='table table-striped table-hover '>
      <thead>
        <tr>
          <th>Organization</th>
          <th>Cargo</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody>
      {{#each model.route.pathways as |pw index|}}
        <tr>
          <td>{{pw.organization.name}}</td>
          <td>{{pw.cargo.name}}</td>
          <td>{{pw.time}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>

<div class="row form-group">
  <div class="col-md-3">
    {{view "select" class="form-control"
            content=model.organizations
            optionValuePath="content.id"
            optionLabelPath="content.name"
            selectionBinding=selectedOrg
            prompt='Please select the organization...'}}
  </div>
  <div class="col-md-3">
    {{view 'select' class="form-control"
            content=model.cargos
            optionValuePath="content.id"
            optionLabelPath="content.name"
            selectionBinding=selectedCargo
            prompt='Please select the cargo...'}}
  </div>

  <div class="col-md-3">
    {{bs-datetimepicker date=wpTime format='LT' }}
  </div>

  <div class="col-md-1">
    <button class="btn btn-success" {{action 'addPathway' selectedCargo selectedOrg wpTime}}>
      <span class="glyphicon glyphicon-plus"></span>
    </button>
  </div>
</div>
<div class="row">
  <div class="col-md-1">
  <button  class='btn btn-primary' {{action 'submit'}}>Save route</button>
  </div>
</div>
