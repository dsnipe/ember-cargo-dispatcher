{{#link-to "routes.new" class='btn btn-primary'}}Create New{{/link-to}}

<table class='table table-striped table-hover '>
  <thead>
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>Pathways</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |route index|}}
    <tr>
      <td>{{index}}</td>
      <td>{{route.date}}</td>
      <td>{{route.pathways.length}}</td>
      <td>
        <button class='btn btn-danger' {{action 'removeRoute' route}}>
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
